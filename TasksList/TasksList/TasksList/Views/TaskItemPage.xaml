<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TasksList.Views.TaskItemPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:TasksList.Models"
    Title="Task Information"
    x:DataType="models:TaskItem">
    <ContentPage.Resources>
        <ResourceDictionary
            Source="../../Styles/TaskPageStyles.xaml" />
    </ContentPage.Resources>
    <ContentPage.Content>
        <Grid
            x:Name="GridTaskItem"
            Margin="20,20,20,0"
            AutomationId="GridTaskItem"
            ColumnDefinitions="*, *"
            RowDefinitions="Auto, Auto, Auto, Auto, Auto"
            RowSpacing="10">
            <Label
                x:Name="LabelDescription"
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                AutomationId="LabelDescription"
                Text="Description"
                TextColor="Black" />
            <Entry
                x:Name="EntryDescription"
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                AutomationId="EntryDescription"
                Placeholder="Type the description"
                PlaceholderColor="Gray"
                Text="{Binding Description}"
                TextColor="Black" />
            <Label
                x:Name="LabelDone"
                Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                AutomationId="LabelDone"
                Text="Done"
                TextColor="Black" />
            <Switch
                x:Name="SwitchDone"
                Grid.Row="3"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                AutomationId="SwitchDone"
                HorizontalOptions="Start"
                IsToggled="{Binding Done}"
                OnColor="Green"
                ThumbColor="Gray" />
            <Button
                x:Name="ButtonSave"
                Grid.Row="4"
                Grid.Column="0"
                AutomationId="ButtonSave"
                Clicked="SaveClicked"
                Style="{StaticResource ActionButton}"
                Text="Save" />
            <Button
                x:Name="ButtonDelete"
                Grid.Row="4"
                Grid.Column="1"
                AutomationId="ButtonDelete"
                Clicked="Deletelicked"
                Style="{StaticResource ActionButton}"
                Text="Delete" />
        </Grid>
    </ContentPage.Content>
</ContentPage>